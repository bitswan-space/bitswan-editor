{
  "name": "bitswan-pre",
  "displayName": "Bitswan PRE",
  "description": "Extension for interacting with Bitswan Pipeline Runtime Environment",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:bitswanPRE"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bitswan-pre-explorer",
          "title": "Bitswan PRE",
          "icon": "resources/bitswan-logo.svg"
        }
      ]
    },
    "views": {
      "bitswan-pre-explorer": [
        {
          "id": "bitswanPRE",
          "name": "Notebooks"
        }
      ]
    },
    "commands": [
      {
        "command": "bitswanPRE.deployNotebook",
        "title": "Deploy Notebook",
        "icon": "$(cloud-upload)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "bitswanPRE.deployNotebook",
          "when": "view == bitswanPRE && viewItem == notebook",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "typescript": "^4.2.4"
  }
}
